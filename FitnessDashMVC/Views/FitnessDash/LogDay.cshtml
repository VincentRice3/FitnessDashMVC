@model UserLogViewModel

<h1>Add your log!</h1>
<hr />

@{
    bool exists = FitnessDashController.exists;
}
  
<!--Tidy Bootsrap form-->
<div class="row">
    <div class="col-6">

        <div class="card">
            <div class="card-header">
                <h5>Add new log</h5>
            </div>

            <div class="card-body">
                <!--Form which points to the helloworld controller ant the create dog method-->
                <form asp-controller="FitnessDash" asp-action="AddDailyLog" method="post">
                    <div class ="mb-3">
                        <label class="form-label">Date</label>
                        <!--Binds user input with Date propery within DogViewModel-->
                        <input asp-for=Date type="date" class="form-control" value="@DateTime.Today.Year.ToString()-@DateTime.Today.Month.ToString()-@DateTime.Today.Day.ToString("00")"/>
                    </div>

                    <div class ="mb-3">
                        <label class="form-label">Steps</label>
                        <!--Binds user input with Steps propery within DogViewModel-->
                        <input asp-for=Steps type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Weight</label>
                        <!--Binds user input with Weight propery within DogViewModel-->
                        <input asp-for=Weight type="number" step="0.01" class="form-control" />
                    </div>
                    <div class="input-group mb-3">
                        <label class="input-group-text">Protein</label>
                        <!--Binds user input with Protein propery within DogViewModel-->
                        <input asp-for=Protein type="number" class="form-control" />

                        <label class="input-group-text">Fats</label>
                        <!--Binds user input with Fats propery within DogViewModel-->
                        <input asp-for=Fat type="number" class="form-control" />   
                        <!--Binds user input with Carbs propery within DogViewModel-->
                        <label class="input-group-text">Carbs</label>
                        <input asp-for=Carbohydrates type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Have You Worked out?</label>
 
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="inlineCheckbox1" value="true" asp-for="WorkoutTrue">
                            <label class="form-check-label" for="inlineCheckbox1">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="inlineCheckbox2" value="false" asp-for="WorkoutTrue">
                            <label class="form-check-label" for="inlineCheckbox2">No</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Daily Reflection</label>
                        <!--Binds user input with age propery within DogViewModel-->
                        <input asp-for=DailyReflection type="text" class="form-control" />
                    </div>
                    <div>
                        <!--On submit, form passes data to createdog method-->
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                    @if (exists)
                    {
                        <p class="text-danger">
                            This log already exists - Please check the date or edit existing log
                        </p>
                        FitnessDashController.exists = false;
                    }

                </form>
            </div>

            <div class="card-footer">
            </div>
        </div>


    </div>
</div>

